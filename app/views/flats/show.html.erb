<div class="container">
  <div class="row">
    <div class="col-8">
      <div class= "border rounded bg-light p-2 m-2">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class= "border rounded bg-light p-2 m-2">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-4">
      <div class= "border rounded bg-light p-2 m-2">
        <h3>details</h3>
        <p><%= @flat.number_of_guests %> people</p>
        <p><%= @flat.price_per_night %> euros per night</p>
      </div>
    </div>
  </div>
</div>
